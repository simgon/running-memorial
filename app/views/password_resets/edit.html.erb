<%# provide(:title, 'Reset password') %>
<% provide(:header_display, true) %>

<div class="container">
  <h1>パスワードを再設定</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'application/error_messages' %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "確認" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "パスワードを再設定", class: "btn btn-primary", style: "margin-top: 15px;" %>
      <% end %>
    </div>
  </div>
</div>