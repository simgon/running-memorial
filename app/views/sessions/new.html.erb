<%# provide(:title, "Log in") %>
<% provide(:header_display, true) %>

<div class="container mt-4">
  <h1>ログイン</h1>

  <%= render "modal", title: "ログイン" do %>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>

        <%= form_with(url: login_path, scope: :session) do |f| %>
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>

          <%= f.label :password, "パスワード" %>
          <%= link_to "パスワードを忘れた場合", new_password_reset_path, style: "color:#000000" %>
          <%= f.password_field :password, class: "form-control" %>

          <%#= f.submit "ログイン", class: "btn btn-primary", style: "margin-top: 15px;", "data-turbo": "false" %>
          <%= f.submit "ログイン", class: "btn btn-primary", style: "margin-top: 15px;" %>
        <% end %>

        <%= link_to "新規アカウントを作成", signup_path, style: "color:#000000" %>
      </div>
    </div>

    <%# data-controller="created_session"経由で更新 %>
    <div id="created_session"></div>
  <% end %>

</div>
